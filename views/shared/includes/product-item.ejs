<article class="product-item">
  <img
    loading="lazy"
    src="<%= product.imageUrl %>"
    alt="<%= product.title %>"
  />
  <div class="product-item-content">
    <h2><%= product.title %></h2>
    <p>$<%= product.price %></p>
    <div class="product-item-actions">
      <% if (locals.isAdmin) { %>
      <a class="btn btn-alt" href="/admin/products/<%= product.id %>"
        >View & Edit</a
      >
      <button
        class="btn btn-alt"
        data-productid="<%= product.id %>"
        data-csrf="<%= locals.csrfToken %>"
      >
        Delete
      </button>
      <% } else { %>
      <a href="/products/<%= product.id %>" class="btn btn-alt">View Details</a>
      <% } %>
    </div>
  </div>
</article>
