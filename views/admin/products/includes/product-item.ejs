<article class="product-item">
  <img
    loading="lazy"
    src="<%= product.imageUrl %>"
    alt="<%= product.title %>"
  />
  <div class="product-item-content">
    <h2><%= product.title %></h2>
    <p>$<%= product.price %></p>
    <div class="product-item-actions">
      <a class="btn btn-alt" href="/admin/products/<%= product.id %>"
        >View & Edit</a
      >
      <button class="btn btn-alt">Delete</button>
    </div>
  </div>
</article>
