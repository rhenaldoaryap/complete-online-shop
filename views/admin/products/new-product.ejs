<%- include("../../shared/includes/head", { pageTitle: "Add New Product" }) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>Add new Product</h1>
        <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
            <p>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>
            </p>
            <p>
                <label for="image">Image</label>
                <input type="file" name="image" id="image" accept="image/png,image/jpg">
            </p>
            <p>
                <label for="summary">Title</label>
                <input type="text" name="summary" id="summary" required maxlength="250">
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" name="price" id="price" required min="0.01" step="0.01">
            </p>
            <p>
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="10" required></textarea>
            </p>
            <p>
                <button class="btn btn-alt" type="reset">Reset</button>
                <button class="btn">Save</button>
            </p>
        </form>
    </main>
<%- include("../../shared/includes/footer") %>
